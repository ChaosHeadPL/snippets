# huge scrollback buffer
defscrollback 5000
#
# status bar
hardstatus alwayslastline
hardstatus string '%{= m}Load Avg:%{= G} %1 %= %{= w}%-w%{+b r}%n:%t%{-b r}%{w}%+w %= %{b}%D %d/%m/%Y %{Y}%c'
#
# fix putty resize window
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;61'
#
# no welcome message
startup_message off
#
# default windows
# screen -t gateway 0 bash --rcfile ~/.bashrc
#
#horizontal lines
caption string "${03} "
#
# bind keys
# bindkey "^[[1;5C" next #Ctrl+Right
# bindkey "^[[1;5D" prev #Ctrl+Left
#
dutf8 on:q

